<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>

        <!-- Propiedades de la conexión -->
        <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/library</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">1234</property>

        <!-- Dialecto recomendado para MariaDB -->
        <property name="hibernate.dialect">org.hibernate.dialect.MariaDBDialect</property>

        <!-- Mostrar las consultas SQL en consola -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <!-- Configuración de la Base de Datos -->
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- Ficheros de mapeo (solo si usas XML) -->
        <mapping resource="tasca.hbm.xml"/>


        <!-- Mapeo usando anotaciones en clases -->
        <mapping class="com.iticbcn.hibernate.models.Empleat"/>
        <mapping class="com.iticbcn.hibernate.models.Departament"/>
        <mapping class="com.iticbcn.hibernate.models.Historic"/>

    </session-factory>
</hibernate-configuration>
